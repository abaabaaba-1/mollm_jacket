  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run SACS Optimization", // 这是你在调试下拉菜单中看到的名字，可以自定义
      "type": "python",                         // 指定这是Python调试器
      "request": "launch",                      // 表示要启动和调试一个新进程
      "program": "${workspaceFolder}/main.py",  // 要运行的主程序文件
      "console": "integratedTerminal",          // 在VS Code的集成终端中显示输出
      "args": [
        "sacs/config.yaml"                      // 程序的命令行参数
      ],
      "cwd": "${workspaceFolder}",              // 将工作目录设置为项目根目录
      "env": {
        // 如果你需要设置任何环境变量，可以在这里添加
        // "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true // 保持为true，这样调试器会跳过库代码，专注于你自己的代码
    }
  ]
}
